<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>

    <label>Body</label>
    <%= f.text_area :body %>
<div class="action">
    <%= f.submit 'Update Book' %>
</div>

    <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path(@books) %>

<% end %>
